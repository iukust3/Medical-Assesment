<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/main_layout"
        android:background="@drawable/preview_itm_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:id="@+id/qustion_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Test jmkjdk djkfjk fl;dkj"
                    android:textColor="@color/grey_800"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/sub_tittle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8pt"
                    android:fontFamily="@font/gothic_font"
                    android:text="aghgahgshhg djkvjdj kdjjd "
                    android:textColor="@color/grey_600"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/guidLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8pt"

                    android:fontFamily="@font/gothic_font"
                    android:text="aghgahgshhg djkvjdj kdjjd "
                    android:textColor="@color/grey_600" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/yesNoLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/radio_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Y"
                            android:textStyle="bold"
                            app:buttonTint="@color/green_600" />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/radio_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="N"
                            android:textStyle="bold"
                            app:buttonTint="@color/red_800" />
                  </LinearLayout>

                <ImageView
                    android:id="@+id/takeImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera" />
            </LinearLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/etqustion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginRight="20dp"
            android:background="@color/grey_5"
            android:gravity="center_vertical"
            android:hint="comment"
            android:padding="@dimen/spacing_middle"
            android:textColor="@color/grey_60" />

        <TextView
            android:id="@+id/date_time"
            style="@style/CustomTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_back"
            android:gravity="center"
            android:hint="Select Date-Time"
            android:text="Select Date-Time"
            android:textColor="@color/white"
            android:textColorHint="@color/blue_400" />

        <LinearLayout
            android:id="@+id/Image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/signature"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>
</layout>